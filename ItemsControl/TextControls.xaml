<Window x:Class="ItemsControl.TextControls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItemsControl"
        mc:Ignorable="d"
        Title="TextControls" Height="450" Width="300">
    <StackPanel Margin="12">
        <TextBlock x:Name="txtBlock" FontFamily="verdana" FontSize="18" FontStyle="Italic" FontWeight="Bold"
                   TextTrimming="CharacterEllipsis">
            
         <Run Text="Hello "/> <LineBreak/>
            <Run Text="World"/>
        </TextBlock>
        <TextBox Width="120" Margin="6" Text="This is awesome wpf course"
                 TextWrapping="NoWrap"/>
        <TextBox Width="120" Margin="6" Text="This is awesome wpf course shawbrook course"
                 TextWrapping="Wrap"/>

        <TextBox x:Name="InputText" Width="120" Margin="6" Text="This is example of spell checking"
                 TextWrapping="WrapWithOverflow" SpellCheck.IsEnabled="true"/>
        <Label Content="_Input" Target="InputText" Width="120"/>
    </StackPanel>
</Window>
