<Window x:Class="ItemsControl.HorizontalStackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItemsControl"
        mc:Ignorable="d"
        Title="HorizontalStackPanel" Height="450" Width="800">
    <Grid>

        <StackPanel Orientation="Vertical">
            <Button x:Name="btnSubmit" BorderBrush="Red" FontSize="24"  Height="45" Content="Hello World!" MinWidth="230" MaxWidth="400" Margin="25,6,10,5" />
            <TextBlock x:Name="Size" FontSize="24" Background="AliceBlue"/>
        </StackPanel>
    </Grid>
</Window>
