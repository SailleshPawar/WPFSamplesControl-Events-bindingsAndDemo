<Window x:Class="WPFEventsAndProperties.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFEventsAndProperties"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel TextElement.FontSize="22" Orientation="Vertical" x:Name="Panel">
        <TextBlock Text="Some Text" Margin="15" Width="120" Height="40" local:Element.Securityid="a1"/>
        <Button Content="Button" Margin="15" Click="Button_Click"/>
    </StackPanel>
</Window>
